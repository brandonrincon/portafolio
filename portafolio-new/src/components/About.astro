---
import { type Lang, defaultLang } from "../i18n/translations";
import { useTranslations } from "../i18n/utils";
import AnimatedSection from "./ui/AnimatedSection";
import TechBadge from "./ui/TechBadge.astro";

interface Props {
  lang?: Lang;
}

const { lang = defaultLang } = Astro.props;
const t = useTranslations(lang);

const technologies = [
  // Languages
  { name: "TypeScript", icon: "typescript", color: "#007ACC" },
  { name: "JavaScript", icon: "javascript", color: "#F7DF1E" },
  { name: "Python", icon: "python", color: "#3670A0" },
  { name: "Java", icon: "openjdk", color: "#ED8B00" },
  { name: "Dart", icon: "dart", color: "#0175C2" },
  { name: "C#", icon: "csharp", color: "#239120" },
  { name: "C++", icon: "cplusplus", color: "#00599C" },
  { name: "PHP", icon: "php", color: "#777BB4" },
  { name: "Rust", icon: "rust", color: "#000000" },
  { name: "Go", icon: "go", color: "#00ADD8" },
  { name: "Shell", icon: "gnubash", color: "#4EAA25" },
  // Cloud & DevOps
  { name: "AWS", icon: "amazonaws", color: "#FF9900" },
  { name: "Azure", icon: "microsoftazure", color: "#0072C6" },
  { name: "Google Cloud", icon: "googlecloud", color: "#4285F4" },
  { name: "Firebase", icon: "firebase", color: "#FFCA28" },
  { name: "Heroku", icon: "heroku", color: "#430098" },
  { name: "Docker", icon: "docker", color: "#2496ED" },
  { name: "Kubernetes", icon: "kubernetes", color: "#326CE5" },
  { name: "Terraform", icon: "terraform", color: "#7B42BC" },
  // Frameworks & Libraries
  { name: "React", icon: "react", color: "#61DAFB" },
  { name: "Angular", icon: "angular", color: "#DD0031" },
  { name: "Next.js", icon: "nextdotjs", color: "#000000" },
  { name: "Laravel", icon: "laravel", color: "#FF2D20" },
  { name: "Flutter", icon: "flutter", color: "#02569B" },
  { name: "Spring", icon: "spring", color: "#6DB33F" },
  { name: "TailwindCSS", icon: "tailwindcss", color: "#06B6D4" },
  { name: "Bootstrap", icon: "bootstrap", color: "#7952B3" },
  { name: "Flask", icon: "flask", color: "#000000" },
  { name: "jQuery", icon: "jquery", color: "#0769AD" },
  { name: "React Native", icon: "react", color: "#61DAFB" },
  { name: "Unity", icon: "unity", color: "#000000" },
  { name: "Symfony", icon: "symfony", color: "#000000" },
  // Databases
  { name: "MongoDB", icon: "mongodb", color: "#47A248" },
  { name: "MySQL", icon: "mysql", color: "#4479A1" },
  { name: "PostgreSQL", icon: "postgresql", color: "#4169E1" },
  { name: "Redis", icon: "redis", color: "#DC382D" },
  { name: "SQLite", icon: "sqlite", color: "#003B57" },
  { name: "DynamoDB", icon: "amazondynamodb", color: "#4053D6" },
  { name: "MariaDB", icon: "mariadb", color: "#003545" },
  { name: "ClickHouse", icon: "clickhouse", color: "#FFCC01" },
  // AI/ML
  { name: "TensorFlow", icon: "tensorflow", color: "#FF6F00" },
  { name: "PyTorch", icon: "pytorch", color: "#EE4C2C" },
  { name: "Pandas", icon: "pandas", color: "#150458" },
