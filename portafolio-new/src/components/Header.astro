---
import { type Lang, defaultLang } from "../i18n/translations";
import { useTranslations } from "../i18n/utils";
import ThemeToggle from "./ui/ThemeToggle.astro";
import LanguageSelector from "./ui/LanguageSelector.astro";

interface Props {
  lang?: Lang;
}

const lang = Astro.props.lang ?? defaultLang;
const t = useTranslations(lang);

const navItems = [
  { href: "#about", label: t("nav.about") },
  { href: "#experience", label: t("nav.experience") },
  { href: "#contact", label: t("nav.contact") },
];
---

<header
  class="fixed top-0 z-40 w-full border-b border-gray-100 bg-white/80 backdrop-blur-md dark:border-gray-800 dark:bg-gray-950/80"
>
  <nav class="mx-auto flex max-w-6xl items-center justify-between px-6 py-4">
    <a href="#" class="text-lg font-semibold text-gray-900 dark:text-white">
      Brandon<span class="text-primary-600 dark:text-primary-400">.</span>
    </a>

    <div class="flex items-center gap-2">
      <!-- Desktop Navigation -->
      <ul class="hidden items-center gap-8 md:flex">
        {
          navItems.map((item) => (
            <li>
              <a
                href={item.href}
                class="text-sm font-medium text-gray-600 transition-colors hover:text-gray-900 dark:text-gray-400 dark:hover:text-white"
              >
                {item.label}
              </a>
            </li>
          ))
        }
      </ul>

      <!-- Language Selector -->
      <LanguageSelector currentLang={lang} class="hidden md:block" />

      <!-- Theme Toggle -->
      <ThemeToggle />

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-btn"
        class="flex h-10 w-10 items-center justify-center rounded-lg text-gray-600 hover:bg-gray-100 dark:text-gray-400 dark:hover:bg-gray-800 md:hidden"
        aria-label="Menu"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-6 w-6"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
  </nav>

  <!-- Mobile Menu -->
  <div
    id="mobile-menu"
    class="hidden border-t border-gray-100 bg-white px-6 py-4 dark:border-gray-800 dark:bg-gray-950 md:hidden"
  >
    <ul class="flex flex-col gap-4">
      {
        navItems.map((item) => (
          <li>
            <a
              href={item.href}
              class="block text-sm font-medium text-gray-600 transition-colors hover:text-gray-900 dark:text-gray-400 dark:hover:text-white"
            >
              {item.label}
            </a>
          </li>
        ))
      }
    </ul>
    <div class="mt-4 pt-4 border-t border-gray-100 dark:border-gray-800">
      <LanguageSelector currentLang={lang} />
    </div>
  </div>
</header>

<script>
  const btn = document.getElementById("mobile-menu-btn");
  const menu = document.getElementById("mobile-menu");

  btn?.addEventListener("click", () => {
    menu?.classList.toggle("hidden");
  });

  document.querySelectorAll("#mobile-menu a").forEach((link) => {
    link.addEventListener("click", () => {
      menu?.classList.add("hidden");
    });
  });
</script>
