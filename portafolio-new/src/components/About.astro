  { name: "Git", icon: "git", color: "#F05032" },
  { name: "Jira", icon: "jira", color: "#0052CC" },
  { name: "Postman", icon: "postman", color: "#FF6C37" },
  { name: "Linux", icon: "linux", color: "#FCC624" },
  { name: "Arduino", icon: "arduino", color: "#00979D" },
  { name: "Nginx", icon: "nginx", color: "#009639" },
  { name: "Gradle", icon: "gradle", color: "#02303A" },
];

const values = [
  {
    icon: "M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4",
    title: t("about.value1.title"),
    description: t("about.value1.description"),
  },
  {
    icon: "M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z",
    title: t("about.value2.title"),
    description: t("about.value2.description"),
  },
  {
    icon: "M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z",
    title: t("about.value3.title"),
    description: t("about.value3.description"),
  },
];
---

<section id="about" class="px-4 sm:px-6 py-16 sm:py-20 md:py-24 lg:py-32">
  <div class="mx-auto max-w-6xl">
    <AnimatedSection client:load>
      <div class="mb-10 sm:mb-12 md:mb-16 text-center">
        <p
          class="mb-4 text-sm font-medium tracking-wider text-primary-600 dark:text-primary-400 uppercase"
        >
          {t("about.subtitle")}
        </p>
        <h2 class="mb-6 text-3xl font-bold text-gray-900 dark:text-white md:text-4xl">
          {t("about.title")}
        </h2>
        <p class="mx-auto max-w-3xl text-lg text-gray-600 dark:text-gray-400">
          {t("about.description")}
        </p>
      </div>
    </AnimatedSection>

    <AnimatedSection client:load delay={0.1}>
      <div class="mb-12 sm:mb-16 md:mb-20 grid gap-4 sm:gap-6 md:grid-cols-3">
        {
          values.map((value) => (
            <div class="group rounded-2xl border border-gray-100 dark:border-gray-800 bg-gray-50 dark:bg-gray-900 p-4 sm:p-6 transition-all hover:border-primary-200 dark:hover:border-primary-700 hover:bg-primary-50 dark:hover:bg-gray-800">
              <div class="mb-4 flex h-12 w-12 items-center justify-center rounded-xl bg-primary-100 dark:bg-primary-900/50 text-primary-600 dark:text-primary-400 transition-colors group-hover:bg-primary-200 dark:group-hover:bg-primary-800">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-6 w-6"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d={value.icon}
                  />
                </svg>
              </div>
              <h3 class="mb-2 text-lg font-semibold text-gray-900 dark:text-gray-100 transition-colors group-hover:text-gray-900 dark:group-hover:text-white">
                {value.title}
              </h3>
              <p class="text-sm text-gray-600 dark:text-gray-300 transition-colors group-hover:text-gray-700 dark:group-hover:text-gray-200">{value.description}</p>
            </div>
          ))
        }
      </div>
    </AnimatedSection>

    <AnimatedSection client:load delay={0.2}>
      <div class="text-center">
        <h3 class="mb-6 sm:mb-8 text-lg sm:text-xl font-semibold text-gray-900 dark:text-white">{t("about.technologies")}</h3>
        <div class="flex flex-wrap justify-center gap-2 sm:gap-3">
          {technologies.map((tech) => <TechBadge name={tech.name} icon={tech.icon} color={tech.color} />)}
        </div>
      </div>
    </AnimatedSection>
  </div>
</section>
