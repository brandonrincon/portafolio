---
import { type Lang, defaultLang } from "../i18n/translations";
import { useTranslations } from "../i18n/utils";
import AnimatedSection from "./ui/AnimatedSection";

interface Props {
  lang?: Lang;
}

const lang = Astro.props.lang ?? defaultLang;
const t = useTranslations(lang);

const socialLinks = [
  {
    name: "LinkedIn",
    href: "https://www.linkedin.com/in/bsrincon",
    icon: "M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z",
  },
  {
    name: "Email",
    href: "mailto:brandon.rincong@gmail.com",
    icon: "M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z",
    isStroke: true,
  },
  {
    name: "Telefono",
    href: "tel:+573227272148",
    icon: "M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z",
    isStroke: true,
  },
];
---

<section id="contact" class="bg-gray-900 dark:bg-gray-950 px-4 sm:px-6 py-16 sm:py-20 md:py-24 lg:py-32">
  <div class="mx-auto max-w-4xl text-center">
    <AnimatedSection client:load>
      <p
        class="mb-4 text-sm font-medium tracking-wider text-primary-400 uppercase"
      >
        {t("contact.subtitle")}
      </p>
      <h2 class="mb-6 text-3xl font-bold text-white md:text-4xl">
        {t("contact.title")}
      </h2>
      <p class="mb-10 text-lg text-gray-400">
        {t("contact.description")}
      </p>
    </AnimatedSection>

    <AnimatedSection client:load delay={0.1}>
      <a
        href="mailto:brandon.rincong@gmail.com"
        class="mb-8 sm:mb-10 md:mb-12 inline-block text-base sm:text-lg md:text-xl lg:text-2xl font-medium text-primary-400 transition-colors hover:text-primary-300 break-all sm:break-normal"
      >
        brandon.rincong@gmail.com
      </a>
    </AnimatedSection>

    <AnimatedSection client:load delay={0.2}>
      <div class="flex items-center justify-center gap-4 sm:gap-6">
        {
          socialLinks.map((link) => (
            <a
              href={link.href}
              target={link.href.startsWith("mailto:") || link.href.startsWith("tel:") ? undefined : "_blank"}
              rel={link.href.startsWith("http") ? "noopener noreferrer" : undefined}
              class="flex h-12 w-12 items-center justify-center rounded-full bg-gray-800 dark:bg-gray-900 text-gray-400 transition-all hover:bg-primary-600 hover:text-white hover:scale-110"
              aria-label={link.name}
            >
              {link.isStroke ? (
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-5 w-5"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d={link.icon}
                  />
                </svg>
              ) : (
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-5 w-5"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path d={link.icon} />
                </svg>
              )}
            </a>
          ))
        }
      </div>
    </AnimatedSection>
  </div>
</section>

<footer class="bg-gray-950 px-4 sm:px-6 py-6 sm:py-8">
  <div class="mx-auto max-w-6xl text-center">
    <p class="text-sm text-gray-500">
      &copy; {new Date().getFullYear()} Brandon Steven Rincon Gutierrez. {t("contact.footer")}
    </p>
  </div>
</footer>
